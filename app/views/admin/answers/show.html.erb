<div class="row justify-content-left mt-3">
  <div class="form-group">
    <h3>Question</h3>

    <p>
      <%= @answer.question.body %>
    </p>

    <h3>Answer</h3>

    <p>
      <%= @answer.body %>
    </p>

    <p>
      <b>Correct:</b>
      <%= @answer.correct %>
    </p>

    <%= link_to t('back', scope: 'helpers.submit'), admin_question_path(@answer.question), class: 'btn btn-primary mt-1' %>
  </div>
</div>
