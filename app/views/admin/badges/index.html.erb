<h2><%= t('.header') %></h2>
  <p>
    <%= link_to t('.new_badge'), new_admin_badge_path, class: 'btn btn-primary mt-1' %>
  </p>

  <%= render 'shared/errors', resource: @badge %>

  <table class="table">
  <tr>
    <th class="sort-by-title pointer">
      <%= t('.title') %>
      <%= octicon 'arrow-up', class: 'text-success hide'%>
      <%= octicon 'arrow-down', class: 'text-success hide'%>
    </th>
    <th><%= t('.level') %></th>
    <th><%= t('.category') %></th>
    <th><%= t('.attempts') %></th>
    <th colspan="3", style="text-align:center;"><%= t('.actions') %></th>
  </tr>
  
  <%= render @badges %>
</table>
