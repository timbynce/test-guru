<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h2><%= t(".sign_up") %></h2>

    <div class="card border-primary">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              
              <p>
                <%= f.label :first_name %><br />
                <%= f.text_field :first_name, id: :user_first_name, class: 'form-control', placeholder: t(".first_name") %>
              </p>

              <p>
                <%= f.label :last_name %><br />
                <%= f.text_field :last_name, id: :user_last_name, class: 'form-control', placeholder: t(".last_name") %>
              </p>

              <p>
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: t(".email") %>
              </p>

              <p>
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em><%= t('.char_min', min_chars: @minimum_password_length) %></em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: 'form-control'%>
              </p>

              <p class="check-pass-input pointer">               
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: t(".repeat_pass") %>
                <%= octicon 'check-circle-fill', class: 'text-success hide mt-2'%>
                <%= octicon 'x-circle-fill', class: 'text-danger hide mt-2'%>
              </p>
              <%= f.submit t(".sign_up"), class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <%= render "devise/shared/links" %>
  </div>
</div>
