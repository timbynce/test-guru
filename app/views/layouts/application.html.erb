<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <p class="nav user"> <b> <%= link_to 'Test Guru', tests_path, method: :get %> <b> </p>
      <p class="nav user">Welcome, <b><%= current_user.title %><b> Guru </p>
      <p class="nav user"> <%= link_to 'Sign out', logout_path, method: :delete %> </p>
    <% else %>
      <p class="nav guest"> <b> <%= link_to 'Test Guru', tests_path, method: :get %> <b> </p>
      <p class="nav guest"> <%= link_to 'Sign in', login_path, method: :get %> / <%=link_to 'Registration', signup_path, method: :get%> </p>
    <% end %>

    
    <%= yield %>

    <%= render 'layouts/footer' %>
  </body>
</html>
