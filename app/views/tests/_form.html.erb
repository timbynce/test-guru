<%= form_with model: @test, local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, id: :test_title %>
  </p><br>

  <p>
    <%= form.label :level %><br>
    <%= form.text_field :level, id: :test_level %>
  </p><br>

  <p>
    <%= form.label :category_id %><br>
    <%= form.collection_select :category_id, Category.all, :id, :title, promt: true %>
  </p>

  <p>
    <%= form.label :author_id %><br>
    <%= form.collection_select :author_id, User.all, :id, :title, promt: true %>
  </p>

  <p><%= form.submit %></p>
<% end %>
